{# property index page : This page shows all properties #}

{% extends 'base.html.twig' %}

{% block title %}Nos biens - Immo78{% endblock %}

{% block body %}

<div class="container">
    <h1>Nos biens disponibles</h1>
    <div class="row">
        {% for property in properties %}
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('property.show', {slug: property.slug, id: property.id }) }}">{{
                            property.title
                            }}</a>
                    </h5>
                    <p class="card-text">{{ property.city }} ({{ property.postalCode}})</p>
                    <p>{{ property.formattedPrice }} â‚¬</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}