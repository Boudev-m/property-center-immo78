<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Immo78{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/icons/logo.png') }}">
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        main {
            /* fix footer at the bottom of screen */
            min-height: 64.4vh;
        }

        #options {
            display: flex;
        }

        #options>.form-check {
            margin: 0 5px;
        }

        td,
        th {
            background-color: transparent !important;
        }
    </style>
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>

<body style="background-color:rgb(225, 240, 240);">
    <header>
        <nav class="navbar navbar-expand-lg py-0" style="background-color:rgb(175, 210, 211);">
            <div class="container" style="max-width: 1020px;">
                <a class="navbar-brand" href="{{ path('home') }}">
                    <div class="m-0 text-center">
                        <img src=" {{ asset('images/icons/logo.png') }}" alt="logo de Immo78" width="60px">
                    </div>
                    <p class="m-0 text-center" style="padding-top: -25px;color: #085c7a;font-weight: 600;">
                        Immo78
                    </p>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03"
                    aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <!-- <li class="nav-item">
                            <a class="nav-link active" href="{{ path('home') }}">Accueil
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('property.index') }}">Nos biens</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Contacter l'agence</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('news.index') }}">Actualités</a>
                        </li>
                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link text-primary" href="{{ path('logout') }}">Se déconnecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" href="{{ path('admin.property.index') }}">Gérer les
                                biens</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" href="{{ path('admin.option.index') }}">Gérer les
                                options</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer style="background-color: rgb(175, 210, 211);">
        <div class="container" style="min-height: 150px;max-width: 1020px;">
            <div class="row py-5">

                <div class="col-4">
                    <div>
                        <img src="{{ asset('images/icons/logo.png') }}" alt="logo de Immo78">
                    </div>
                    <p>
                        Copyright 2023 Immo78.<br>
                        Tous droits réservés.
                    </p>
                </div>

                <div class="col-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Accueil</a>
                        </li>
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Nous contacter</a>
                        </li>
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Actualités</a>
                        </li>
                    </ul>
                </div>

                <div class="col-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Plan du site</a>
                        </li>
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Informations légales</a>
                        </li>
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Politique de protection des données</a>
                        </li>
                        <li class="list-group-item bg-transparent">
                            <a href="#" class="text-dark text-decoration-none">Politique de cookies</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

    </footer>
</body>

</html>