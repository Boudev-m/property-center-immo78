{# admin property index page : This page shows all properties to manage them (back office) #}

{% extends 'base.html.twig' %}

{% block title %}Gérer les biens - Immo78{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Gérer les biens</h1>
        </div>
        <div class="col-md-6">
            <a href="{{ path('admin.property.new') }}" class="btn btn-primary">Ajouter un nouveau bien</a>
        </div>

    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for property in properties %}
            <tr>
                <td>{{ property.title }}</td>
                <td><a href="{{ path('admin.property.edit', {id: property.id}) }}" class="btn btn-warning">Editer</a>
                    <form method="post" action="{{ path('admin.property.delete', {id: property.id}) }}"
                        class="d-inline-block">
                        <input type="hidden" name="_method" value="DELETE"> {# _method is known by symfony #}
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}